<!-- Plugin Configuration File. Read more: https://plugins.jetbrains.com/docs/intellij/plugin-configuration-file.html -->
<idea-plugin>
    <id>com.github.victorrentea.slf4jplugin</id>
    <name>Live-Coding Toolkit</name>
    <vendor>Victor Rentea (www.victorrentea.ro)</vendor>


    <depends>com.intellij.modules.platform</depends>
    <depends>com.intellij.java</depends>
    <depends>Git4Idea</depends>

    <actions>
        <action class="com.github.victorrentea.livecoding.CopyGitCoordinates" text="Copy Git Coordinates to Clipboard">
            <!--<keyboard-shortcut first-keystroke="control shift O" keymap="$default"/>-->
            <add-to-group group-id="Git.MainMenu" anchor="last"/>
        </action>
        <action class="com.github.victorrentea.livecoding.AutoImportStatics" text="Auto-Import Statics">
            <keyboard-shortcut first-keystroke="control shift O" keymap="$default"/>
        </action>
        <action  class="com.github.victorrentea.livecoding.BackgroundMood1Action" text="Toggle Hardcore Background">
            <keyboard-shortcut first-keystroke="control alt 8" keymap="$default"/>
        </action>
        <action  class="com.github.victorrentea.livecoding.BackgroundMood2Action" text="Toggle Child Background">
            <keyboard-shortcut first-keystroke="control alt 9" keymap="$default"/>
        </action>
        <action  class="com.github.victorrentea.livecoding.BackgroundMood3Action" text="Toggle Cool Background">
            <keyboard-shortcut first-keystroke="control alt 0" keymap="$default"/>
        </action>
    </actions>

    <extensions defaultExtensionNs="com.intellij">
        <applicationConfigurable parentId="tools" instance="com.github.victorrentea.livecoding.settings.SettingsConfigurable"
                                 id="com.github.victorrentea.livecoding.settings.SettingsConfigurable"
                                 displayName="Live-Coding"/>

        <applicationService serviceImplementation="com.github.victorrentea.livecoding.settings.AppSettingsState"/>

        <annotator language="JAVA" implementationClass="com.github.victorrentea.livecoding.Slf4jAnnotator"/>
        <editorFactoryListener implementation="com.github.victorrentea.livecoding.ChangeColorOfTestFiles" />
        <localInspection language="JAVA"
                         displayName="Replace boilerplate constructor with @RequiredArgsConstructor"
                         groupName="Redundant definitions"
                         groupPath="Lombok"
                         enabledByDefault="true"
                         level="WARNING"
                         implementationClass="com.github.victorrentea.livecoding.ReplaceRequiredArgsConstructorInspection"/>
        <localInspection language="JAVA"
                         displayName="Add @RequiredArgsConstructor to set final fields"
                         groupName="Redundant definitions"
                         groupPath="Lombok"
                         enabledByDefault="true"
                         level="WARNING"
                         implementationClass="com.github.victorrentea.livecoding.AddRequiredArgsConstructorInspection"/>
        <localInspection language="JAVA"
                         displayName="Avoid using @Data on @Entity"
                         groupName="Lombok"
                         enabledByDefault="true"
                         level="WARNING"
                         implementationClass="com.github.victorrentea.livecoding.LombokAndHibernateInspection"/>
        <localInspection language="JAVA"
                         displayName="Local variable can be split in separate declarations"
                         groupName="JAVA"
                         enabledByDefault="true"
                         level="WARNING"
                         implementationClass="com.github.victorrentea.livecoding.SplitVariableInspection"/>
        <localInspection language="JAVA"
                         displayName="Define a new variable to avoid re-assignment"
                         groupName="JAVA"
                         enabledByDefault="true"
                         level="INFO"
                         implementationClass="com.github.victorrentea.livecoding.DeclareNewLocalInspection"/>
        <localInspection language="JAVA"
                         displayName="Remove final keyword from parameters and locals"
                         groupName="JAVA"
                         enabledByDefault="true"
                         level="INFO"
                         implementationClass="com.github.victorrentea.livecoding.RemoveFinalFromLocalInspection"/>
    </extensions>

</idea-plugin>
